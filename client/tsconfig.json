{
	"compilerOptions": {
		"outDir": "./build",
		"rootDir": "./src",
		"sourceMap": true,
		"noImplicitAny": false,
		"removeComments": true,
		"strict": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"lib": ["es2017.object", "dom", "es6"]
	},
	"include": ["./src/**/*.d.ts", "./src/**/*.ts"],
	"exclude": ["node_modules", "build"]
}
